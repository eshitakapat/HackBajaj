# Application Settings
# ====================
DEBUG=True
APP_NAME="Insurance Helper API"
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-here  # Change this in production!

# Server Configuration
# ===================
PROJECT_NAME="Insurance Helper API"
PROJECT_DESCRIPTION="API for processing insurance documents and answering questions"
PROJECT_VERSION=0.1.0
HOST=0.0.0.0
PORT=8000
API_V1_STR=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Authentication
# ==================
JWT_SECRET_KEY=your-jwt-secret-key  # Change this in production!
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# CORS (Comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000  # In production, replace with specific origins

# Database Configuration
# =====================
# PostgreSQL connection string
# Format: postgresql+asyncpg://username:password@host:port/dbname
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=insurance_helper
DATABASE_URI=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}/${POSTGRES_DB}

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
DEFAULT_LLM_MODEL=mistralai/mistral-7b-instruct

# File Uploads
# ============
MAX_FILE_SIZE_MB=50  # Maximum file size in MB
UPLOAD_DIR=uploads  # Directory to store uploaded files
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Pinecone Vector Database
# =======================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment  # e.g., 'us-west1-gcp'
PINECONE_INDEX=insurance-helper
EMBEDDING_DIMENSION=384  # Dimension of the embeddings (depends on the model)

# Logging
# =======
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Email (for notifications, etc.)
# =========
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=no-reply@insurance-helper.com
EMAILS_FROM_NAME="Insurance Helper"

# Rate Limiting
# =============
RATE_LIMIT=100  # Requests per minute
RATE_LIMIT_WINDOW=60  # Seconds

# Feature Flags
# ============
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_ANALYTICS=False